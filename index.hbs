{{!< default}}

<header class="header-home">
  <h1 class="header-home__title">{{@blog.title}}</h1>
  <h2 class="header-home__description">{{@blog.description}}</h2>
</header>

<main class="content-home">
  {{! Each post will be output using this markup }}
  {{#foreach posts}}
    <article class="post {{post_class}}">
      <header class="post__header">
        <h2 class="post__title">
          <a href="{{url}}">{{{title}}}</a>
        </h2>

        <time class="post___time" datetime="{{date format='YYYY-MM-DD'}}">
          {{date format="DD MMM YYYY"}}
        </time>
      </header>
    </article>
  {{/foreach}}
</main>
